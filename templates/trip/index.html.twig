{% extends 'base.html.twig' %}

{% block title %}{{title}}{% endblock %}
{% block description %} {{ description }} {% endblock  %}

{% block body %}

    <div class="my-4">
        <h1 class="fs-1 text-bolder">Toutes les aventures partagées</h1>
    </div>

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3 m-auto">
    {% for item in trips %}
        <div class="col">
          <div class="card shadow-sm">
          <img src="{{item.cover}}" alt="{{item.title}}" class="card-img-top img-fluid" height="225" width="100%">
            <div class="card-body">
              <p class="card-text">{{item.description ? item.description|slice(0, 30) : ''}}...</p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <a href={{path('app_trip', {'ref': item.ref})}} class="btn btn-sm btn-outline-secondary">Découvrir</a>
                  {% if app.user %}
                  <button type="button" class="btn btn-sm btn-outline-secondary">Éditer</button>
                  {% endif %}
                </div>
                <small class="text-body-secondary">{{item.localisation.distance}} Km</small>
              </div>
            </div>
          </div>
        </div>
    {% endfor %}
        
    </div>


{% endblock %}
